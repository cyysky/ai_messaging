# Server Configuration
AI_MESSAGE_HOST=0.0.0.0
AI_MESSAGE_PORT=8000
AI_MESSAGE_DOMAIN=api.example.com

# Frontend Configuration
AI_MESSAGE_FRONTEND_HOST=localhost
AI_MESSAGE_FRONTEND_PORT=3000
AI_MESSAGE_FRONTEND_SSL=false

# Database Configuration
# SQLite (default for development):
AI_MESSAGE_DATABASE_URL=sqlite:///./backend/backend.db
# PostgreSQL (for production):
# AI_MESSAGE_DATABASE_URL=postgresql://user:password@localhost/dbname

# SSL Configuration
AI_MESSAGE_SSL_CERT=D:/ssl/cert.pem
AI_MESSAGE_SSL_KEY=D:/ssl/key.pem

# Logs Configuration
AI_MESSAGE_LOGS_FOLDER=logs

# LiteLLM Configuration
LITELLM_BASEURL=http://localhost:5678
LITELLM_API_KEY=sk-....
LITELLM_MODEL=openai/....
CHAT_HISTORY_MAX=50

# AI Bot Configuration
AI_BOT_USER_ID=-1

# Folder path for AI agent access
AI_FOLDER_PATH=./ai_files

# Web Search Configuration
SEARCH_ENGINE=google_cse

# Google Custom Search API
GOOGLE_API_KEY=AI....
GOOGLE_CSE_ID=1234....

# Twilio Configuration (for sending SMS replies)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890